<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/actionbar_shadow"
    >

    <ImageView
        android:id="@+id/actionbar_btton_back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/back_icon"
        android:layout_marginLeft="@dimen/_2sdp"
        android:visibility="invisible"
        android:paddingLeft="@dimen/_2sdp" />

    <com.uhungry.custom_widget.TextViewRobotoMedium
        android:id="@+id/actionbarLayout_title"
        android:layout_width="220dp"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="@string/app_name"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/bg_circle"
        >
        <com.uhungry.custom_widget.TextViewRobotoReguler
            android:id="@+id/tvResultCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_7ssp"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="2"
            android:textColor="@color/app_black"
            android:text="0 Results"
            />
    </LinearLayout>

</RelativeLayout>