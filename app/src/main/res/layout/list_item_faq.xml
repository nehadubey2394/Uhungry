<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explore_io_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      >
    <com.uhungry.custom_widget.TextViewRobotoMedium
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/_14ssp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        tools:text="1" />

    <com.uhungry.custom_widget.TextViewRobotoMedium
        android:id="@+id/list_item_genre_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_id"
        android:layout_toLeftOf="@+id/list_item_genre_arrow"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_14ssp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        tools:text="Genre" />

    <ImageView
        android:id="@+id/list_item_genre_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="@color/colorPrimaryDark"
        android:src="@drawable/drop_down_icon" />

  </RelativeLayout>
</android.support.v7.widget.CardView>


