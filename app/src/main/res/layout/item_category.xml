<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/_3sdp"
    android:layout_centerInParent="true"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_field_gray_circle"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCategory"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:clickable="false"
            android:layout_centerInParent="true"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@drawable/transperent_circle"/>

        <View
            android:id="@+id/transperentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/bg_transperent_circle"/>

        <com.uhungry.custom_widget.TextViewRobotoReguler
            android:id="@+id/tvCategoryName"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:maxLines="2"
            android:layout_gravity="bottom|center_horizontal"
            />

        <TextView
            android:id="@+id/tvCatCount"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_field_red_circle"/>

    </RelativeLayout>

</RelativeLayout>