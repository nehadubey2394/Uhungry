<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/actionbar_shadow"
    >

    <ImageView
        android:id="@+id/actionbar_btton_back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/back_icon"
        android:layout_marginLeft="@dimen/_2sdp"
        android:visibility="invisible"
        android:paddingLeft="@dimen/_2sdp" />

    <com.uhungry.custom_widget.TextViewRobotoMedium
        android:id="@+id/actionbarLayout_title"
        android:layout_width="220dp"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="@string/app_name"
        android:layout_centerInParent="true"/>


    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/edit_icon"
        android:layout_marginRight="@dimen/_4sdp"
        android:visibility="gone"
        android:paddingRight="@dimen/_2sdp" />

    <CheckBox
        android:id="@+id/chbAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:checked="false"
        android:textSize="@dimen/_14sdp"
        android:layoutDirection="rtl"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:text="@string/btn_txt_all"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/lyStepsCross"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/bg_red_circle"
        >
        <ImageView
            android:id="@+id/ivCross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/icon_cross"/>

    </LinearLayout>
    
</RelativeLayout>