<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/subsActionbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/actionbar_layout"/>

    <LinearLayout
        android:layout_below="@+id/subsActionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/circle_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            >
            <com.uhungry.custom_widget.TextViewRobotoBold
                android:id="@+id/tvSpPrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:text="$1.99/"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/app_black"
                android:textSize="@dimen/_16ssp" />

            <com.uhungry.custom_widget.TextViewRobotoReguler
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:text="Month"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/app_black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <com.uhungry.custom_widget.TextViewRobotoReguler
            android:id="@+id/tvSpDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:enabled="false"
            android:textSize="@dimen/_13ssp"
            android:padding="@dimen/_5sdp"
            android:text="@string/text_subcription_txt"
            android:clickable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/app_black"/>

        <com.uhungry.custom_widget.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            >
            <com.uhungry.custom_widget.ButtonRobotoReguler
                android:id="@+id/btnSubcribe"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_32sdp"
                android:elevation="@dimen/_4sdp"
                android:text="@string/text_subcribe"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/red_btn_bg"/>

        </com.uhungry.custom_widget.RippleView>

    </LinearLayout>
</RelativeLayout>