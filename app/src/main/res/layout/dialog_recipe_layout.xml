<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/transperant1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_265sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_subcription_alert"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_red_box"
            >
            <com.uhungry.custom_widget.TextViewRobotoMedium
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:text="Alert!"
                android:layout_centerInParent="true"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_16ssp" />

            <LinearLayout
                android:id="@+id/lyCross"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:clickable="true"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/bg_field_white_circle"
                >

                <ImageView
                    android:id="@+id/ivCross"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/icon_cross"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/_18sdp"

            >
            <ImageView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/circle_img"/>

            <com.uhungry.custom_widget.TextViewRobotoMedium
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/text_dialog"
                android:imeOptions="actionNext"
                android:maxLines="4"
                android:textColor="@color/app_black"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_16ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp">

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:elevation="@dimen/_4sdp"
                    android:text="@string/btn_txt_yes"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/red_btn_bg"/>


                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:elevation="@dimen/_4sdp"
                    android:text="@string/btn_txt_no"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/red_btn_bg"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>