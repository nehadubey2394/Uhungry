<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="@dimen/_55sdp"
        android:padding="@dimen/_2sdp"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivMenuItem"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_gray_border"
            />


        <com.uhungry.custom_widget.TextViewRobotoMedium
            android:id="@+id/tvMenuItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toRightOf="@+id/ivMenuItem"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:maxLines="1"
            />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@+id/tvMenuItemName"
            android:layout_toRightOf="@+id/ivMenuItem"
            android:background="@color/mid_gray">

        </View>
    </RelativeLayout>
</RelativeLayout>