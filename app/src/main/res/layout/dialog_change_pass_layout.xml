<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/transperant1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_265sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_subcription_alert"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_red_box"
            >

            <LinearLayout
                android:id="@+id/ivCross"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:clickable="true"
                android:background="@drawable/bg_field_white_circle"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/icon_cross"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_18sdp"

            >
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/circle_img"/>

            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:background="@drawable/login_textfield_bg">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:src="@drawable/password_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_22sdp"
                    android:background="@color/gray"
                    android:layout_marginLeft="@dimen/_8sdp"/>

                <com.uhungry.custom_widget.EditTextRobotoLight
                    android:id="@+id/etOldPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:ems="13"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:hint="@string/enter_old_pass"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:background="@drawable/login_textfield_bg">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:src="@drawable/password_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_22sdp"
                    android:background="@color/gray"
                    android:layout_marginLeft="@dimen/_8sdp"/>

                <com.uhungry.custom_widget.EditTextRobotoLight
                    android:id="@+id/etNewPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:ems="13"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:hint="@string/enter_new_pass"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:background="@drawable/login_textfield_bg">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:src="@drawable/password_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_22sdp"
                    android:background="@color/gray"
                    android:layout_marginLeft="@dimen/_8sdp"/>

                <com.uhungry.custom_widget.EditTextRobotoLight
                    android:id="@+id/etNewConfirmPass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:ems="13"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:hint="@string/enter_confirm_pass"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnDone"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_30sdp"
                android:elevation="@dimen/_4sdp"
                android:text="@string/btn_txt_done"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/red_btn_bg"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>